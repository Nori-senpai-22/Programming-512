class Car:
    def __init__(self, year_model, make, speed):
        self.year_model = year_model
        self.make = make
        self.speed= speed
    def accelerate(self):
        
         self.speed += 5
    def brake(self):
        self.brake -=5
        
    def stats(self):
        print(f"This is a {self.year_model} made the year {self.make} going at a speed of {self.speed}")
      
        
car1= Car("Toyota", 2013, 220)



car1.accelerate()
print(car1.speed)
car1.stats()
